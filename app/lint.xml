<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Enforce string resources - prevent hardcoded text -->
    <issue id="HardcodedText" severity="error">
        <!-- Allow hardcoded text in test files -->
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <!-- Allow in debug/developer screens -->
        <ignore path="**/components/DeveloperOptionsSection.kt" />
    </issue>

    <!-- Enforce ErrorLogger usage - prevent printStackTrace() anti-pattern -->
    <issue id="PrintStackTraceUsage" severity="error">
        <!-- Allow in test files where stack traces might be useful for debugging -->
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <!-- Allow in lint test files -->
        <ignore path="**/lint/src/test/**" />
    </issue>

    <!-- Enforce ErrorLogger usage - prevent android.util.Log direct usage -->
    <issue id="DirectLogUsage" severity="error">
        <!-- Allow in test files where direct logging might be needed -->
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
        <!-- Allow in lint test files -->
        <ignore path="**/lint/src/test/**" />
        <!-- Allow in ErrorLogger itself (it uses Log internally) -->
        <ignore path="**/ErrorLogger.kt" />
    </issue>
</lint>
