<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <!-- Stage I Tests Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stage1_tests_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/military_gold"
        android:background="@color/navy_blue_dark"
        android:padding="12dp"
        android:layout_marginBottom="4dp" />

    <!-- OIR Test -->
    <LinearLayout
        android:id="@+id/nav_oir_test_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="OIR Test Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oir_test"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- PPDT Test -->
    <LinearLayout
        android:id="@+id/nav_ppdt_test_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_gallery"
            android:contentDescription="PPDT Test Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ppdt_test"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Stage II Tests Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stage2_tests_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/military_gold"
        android:background="@color/navy_blue_dark"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp" />

    <!-- Psychology Test -->
    <LinearLayout
        android:id="@+id/nav_psychology_test_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_slideshow"
            android:contentDescription="Psychology Test Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/psychology_test"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- GTO Test -->
    <LinearLayout
        android:id="@+id/nav_gto_test_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="GTO Test Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gto_test"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- IO Test -->
    <LinearLayout
        android:id="@+id/nav_io_test_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_gallery"
            android:contentDescription="IO Test Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/io_test"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/military_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Main Menu Items -->
    <!-- Dashboard -->
    <LinearLayout
        android:id="@+id/nav_home_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="Dashboard Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_home"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Study Materials -->
    <LinearLayout
        android:id="@+id/nav_study_materials_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_gallery"
            android:contentDescription="Study Materials Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_study_materials"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Practice Tests -->
    <LinearLayout
        android:id="@+id/nav_practice_tests_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_slideshow"
            android:contentDescription="Practice Tests Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_practice_tests"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Progress Tracker -->
    <LinearLayout
        android:id="@+id/nav_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_camera"
            android:contentDescription="Progress Tracker Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_progress"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Tips & Tricks -->
    <LinearLayout
        android:id="@+id/nav_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_menu_gallery"
            android:contentDescription="Tips and Tricks Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_tips"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
