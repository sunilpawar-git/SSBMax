<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SSBMax" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Navy Blue (Military theme) -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color - Olive Green (Army theme) -->
        <item name="colorSecondary">@color/olive_green</item>
        <item name="colorSecondaryVariant">@color/olive_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SSBMax.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SSBMax.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SSBMax.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Menu Header Styles -->
    <style name="NavigationMenuHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/military_gold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@color/navy_blue_dark</item>
    </style>

    <style name="NavigationMenuSubItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">32dp</item>
    </style>
</resources>