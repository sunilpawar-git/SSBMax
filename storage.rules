rules_version = '2';

// Firebase Storage Security Rules for SSBMax
service firebase.storage {
  match /b/{bucket}/o {
    
    // PPDT images - PUBLIC READ (anyone can view, only authenticated can upload)
    match /ppdt_images/{allPaths=**} {
      allow read;  // TRULY public - no conditions, no app check required
      allow write: if request.auth != null;  // Only authenticated users can upload
    }
    
    // TAT images - PUBLIC READ
    match /tat_images/{allPaths=**} {
      allow read;  // TRULY public - no conditions
      allow write: if request.auth != null;
    }
    
    // GPE images - PUBLIC READ
    match /gpe_images/{allPaths=**} {
      allow read;  // TRULY public - no conditions
      allow write: if request.auth != null;
    }
    
    // User uploads and profile pictures - AUTHENTICATED ONLY
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: Deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

